{
    "Parameters": {
        "myIPCidr": {
            "Type": "String",
            "Default": "173.67.202.129/32",
            "Description": "Your router IP address to allow all traffic from it"
        },
        "subnetUSEast1d": {
            "Type": "String",
            "Default": "subnet-d76fb78a",
            "Description": "Your subnet ID for us-east-1d"
        },
        "defaultVPC": {
            "Type": "String",
            "Default": "vpc-af81e9d7",
            "Description": "Default VPC ID"
        },
        "MyKeyName": {
            "Type": "String",
            "Default": "ecs-key-pair-us-east-1",
            "Description": "SSH Key for Instances"
        },
        "Application": {
            "Type": "String",
            "Default": "Mesos",
            "Description": "Name of application"
        },
        "Environment": {
            "Type": "String",
            "Default": "test",
            "Description": "Name of environment"
        },
        "zookeeperImageId": {
            "Type": "String",
            "Default": "ami-039a49e70ea773ffc",
            "Description": "The Ubuntu image id"
        },
        "mesosImageId": {
            "Type": "String",
            "Default": "ami-039a49e70ea773ffc",
            "Description": "The Ubuntu image id for mesos"
        },        
        "zookeeperInstanceType": {
            "Type": "String",
            "Default": "t3.micro",
            "Description": "The instance type of the zookeeper instance(s)"
        },
        "mesosMasterInstanceType": {
            "Type": "String",
            "Default": "t3.micro",
            "Description": "The instance type of the mesos master instance(s)"
        },
        "mesosAgentInstanceType": {
            "Type": "String",
            "Default": "t3.micro",
            "Description": "The instance type of the mesos agent instance(s)"
        },
        "marathonInstanceType": {
            "Type": "String",
            "Default": "t3.micro",
            "Description": "The instance type of the Marathon(s)"
        }
    },
    "Resources": {
        "SharedSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Shared security group for Mesos cluster",
                "GroupName": { "Fn::Join" : [ "-", [ "mesos-cluster-sg", {"Ref": "AWS::StackId"} ] ] },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 0,
                        "ToPort": 65535,
                        "CidrIp": {
                            "Ref": "myIPCidr"
                        }
                    }
                ],
                "VpcId": {
                    "Ref": "defaultVPC"
                }
            }
        },
        "SharedSecurityGroupSelfReference": {
            "Type": "AWS::EC2::SecurityGroupIngress",
            "Properties": {
                "IpProtocol": "-1",
                "FromPort": "-1",
                "ToPort": "-1",
                "SourceSecurityGroupId": {
                    "Ref": "SharedSecurityGroup"
                },
                "GroupId": {
                    "Ref": "SharedSecurityGroup"
                }
            }
        },
        "MesosEC2Role": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Description": "The mesos role to give to EC2 instances",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/AmazonS3FullAccess",
                    "arn:aws:iam::aws:policy/AmazonEC2FullAccess"
                ]
            }
        },
        "InstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Roles": [
                    {
                        "Ref": "MesosEC2Role"
                    }
                ]
            }
        },
        "ZookeeperNestedStack1": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://mesos-development.s3.amazonaws.com/cloud-formation/zookeeper.json",
                "Parameters": {
                    "mesosSecurityGroupId": {
                        "Fn::GetAtt": [
                            "SharedSecurityGroup",
                            "GroupId"
                        ]
                    },
                    "instanceProfileName": {
                        "Ref": "InstanceProfile"
                    },
                    "sshKeyName": {
                        "Ref": "MyKeyName"
                    },
                    "zookeeperImageId": {
                        "Ref": "zookeeperImageId"
                    },
                    "subnetId": {
                        "Ref": "subnetUSEast1d"
                    },
                    "stackId": {"Ref": "AWS::StackId"}
                }
            }
        },
        "MesosMaster": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://mesos-development.s3.amazonaws.com/cloud-formation/mesos.json",
                "Parameters": {
                    "mesosSecurityGroupId": {
                        "Fn::GetAtt": [
                            "SharedSecurityGroup",
                            "GroupId"
                        ]
                    },
                    "instanceProfileName": {
                        "Ref": "InstanceProfile"
                    },
                    "sshKeyName": {
                        "Ref": "MyKeyName"
                    },
                    "mesosImageId": {
                        "Ref": "mesosImageId"
                    },
                    "subnetId": {
                        "Ref": "subnetUSEast1d"
                    },
                    "mesosType": "Master",
                    "mesosInstanceType": {
                        "Ref": "mesosMasterInstanceType"
                    },
                    "stackId": {"Ref": "AWS::StackId"}
                }
            }
        },
        "MesosAgent": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://mesos-development.s3.amazonaws.com/cloud-formation/mesos.json",
                "Parameters": {
                    "mesosSecurityGroupId": {
                        "Fn::GetAtt": [
                            "SharedSecurityGroup",
                            "GroupId"
                        ]
                    },
                    "instanceProfileName": {
                        "Ref": "InstanceProfile"
                    },
                    "sshKeyName": {
                        "Ref": "MyKeyName"
                    },
                    "mesosImageId": {
                        "Ref": "mesosImageId"
                    },
                    "subnetId": {
                        "Ref": "subnetUSEast1d"
                    },
                    "mesosType": "Agent",
                    "mesosInstanceType": {
                        "Ref": "mesosAgentInstanceType"
                    },
                    "stackId": {"Ref": "AWS::StackId"}
                }
            }
        },
        "Marathon": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://mesos-development.s3.amazonaws.com/cloud-formation/marathon.json",
                "Parameters": {
                    "mesosSecurityGroupId": {
                        "Fn::GetAtt": [
                            "SharedSecurityGroup",
                            "GroupId"
                        ]
                    },
                    "instanceProfileName": {
                        "Ref": "InstanceProfile"
                    },
                    "sshKeyName": {
                        "Ref": "MyKeyName"
                    },
                    "mesosImageId": {
                        "Ref": "mesosImageId"
                    },
                    "subnetId": {
                        "Ref": "subnetUSEast1d"
                    },
                    "mesosType": "Marathon",
                    "mesosInstanceType": {
                        "Ref": "marathonInstanceType"
                    },
                    "stackId": {"Ref": "AWS::StackId"}
                }
            }
        }
    }
}
